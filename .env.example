# -----------------------------------------------------------------------------
# Core Application Settings
# -----------------------------------------------------------------------------
QWERY_LOG_LEVEL=INFO
QWERY_SKIP_DOTENV=0

# Filesystem + Storage
QWERY_WORK_DIR=./data_storage

# Database (pick ONE of the two options below)
QWERY_DB_URL=postgresql://postgres:YUX5he1NC3cn@angry-star-sooomu.us-west-aws.db.guepard.run:22050/postgres?sslmode=require
# QWERY_DB_PATH=/absolute/path/to/local.db

# Database pooling (Postgres)
QWERY_DB_POOL_MIN=2
QWERY_DB_POOL_MAX=20

# -----------------------------------------------------------------------------
# LLM Provider (set QWERY_LLM_PROVIDER to azure | openai | anthropic)
# -----------------------------------------------------------------------------
QWERY_LLM_PROVIDER=azure
QWERY_LLM_MODEL=gpt-4o-mini

# Azure OpenAI
AZURE_API_KEY=put-your-azure-key
AZURE_ENDPOINT=https://your-azure-resource.openai.azure.com
AZURE_API_VERSION=2024-02-01
AZURE_DEPLOYMENT_ID=gpt-4o-mini

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key
ANTHROPIC_MODEL=claude-3-5-sonnet

# -----------------------------------------------------------------------------
# Default User / Groups
# -----------------------------------------------------------------------------
QWERY_DEFAULT_USER_ID=demo-user
QWERY_DEFAULT_GROUPS=read_data

# -----------------------------------------------------------------------------
# Rate limiting + Websocket limits
# -----------------------------------------------------------------------------
QWERY_RATE_LIMIT_RPM=60
QWERY_RATE_LIMIT_RPH=1000
QWERY_MAX_CONNECTIONS_PER_CHAT=10
QWERY_MAX_CHAT_HISTORY=100
QWERY_MAX_CHAT_STATES=10000

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
QWERY_CORS_ALLOW_ORIGINS=*
QWERY_CORS_ALLOW_METHODS=*
QWERY_CORS_ALLOW_HEADERS=*
QWERY_CORS_EXPOSE_HEADERS=
QWERY_CORS_ALLOW_CREDENTIALS=false

# -----------------------------------------------------------------------------
# Testing
# -----------------------------------------------------------------------------
QWERY_TEST_DB_URL=postgresql://postgres:postgres@localhost:5432/qwery_test
SKIP_POSTGRES_TESTS=0
