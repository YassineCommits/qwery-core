{
  "name": "@qwery/extension-postgresql",
  "private": true,
  "version": "0.1.0",
  "description": "Qwery PostgreSQL datasource extension",
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint src",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix src",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "exports": {
    ".": "./src/index.ts",
    "./driver": "./src/driver.ts"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "dependencies": {
    "@qwery/extensions-sdk": "workspace:*",
    "@types/pg": "^8.11.10",
    "pg": "^8.13.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@qwery/eslint-config": "workspace:*",
    "@qwery/prettier-config": "workspace:*",
    "@qwery/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "^9.39.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "contributes": {
    "datasources": [
      {
        "id": "postgresql",
        "name": "PostgreSQL",
        "description": "PostgreSQL datasource using the pg driver",
        "icon": {
          "light": "icons/postgresql_icon_big.png",
          "dark": "icons/postgresql_icon_big.png"
        }
      }
    ]
  },
  "prettier": "@qwery/prettier-config"
}